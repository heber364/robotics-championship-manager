generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name  String
  email String @unique
  hash  String

  hashRt       String?
  roles        Role[]
  hashOtpCode  String?
  otpExpiresAt DateTime?
}

enum Role {
  USER
  ADMIN
}
