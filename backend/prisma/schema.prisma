generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email        String    @unique
  hash         String
  hashRt       String?
  roles        Role[]
  otpCode      String?   @unique
  otpExpiresAt DateTime?
}

enum Role {
  USER
  ADMIN
}
